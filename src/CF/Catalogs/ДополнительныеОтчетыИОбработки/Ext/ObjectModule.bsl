	Если ОбменДанными.Загрузка Тогда
		Возврат;
	КонецЕсли;
	Если ЭтоГруппа Тогда
		Возврат;
	КонецЕсли;
	
	Если ЭтоНовый() 
		И НЕ Отказ Тогда
		
		Отказ = ОбщийМодульСервисСервер.ПроверитьОтказДоступа("003100", , Отказ, ЭтотОбъект);
	КонецЕсли;
	
	Если ПометкаУдаления 
		И НЕ Публикация = Перечисления.ВариантыПубликацииДополнительныхОтчетовИОбработок.Отключена Тогда
		
		Публикация = Перечисления.ВариантыПубликацииДополнительныхОтчетовИОбработок.Отключена;
	КонецЕсли;
	
