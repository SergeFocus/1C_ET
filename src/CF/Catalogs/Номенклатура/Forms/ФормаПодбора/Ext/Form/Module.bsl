			СтрокаТовара.Количество = окр(СтрокаТовара.Сумма / СтрокаТовара.Цена);
		КонецЕсли;
		
		СтрокаТовара.Сумма 	= СтрокаТовара.Количество * СтрокаТовара.Цена;	
