		КонецЕсли;
	Иначе
		Сотрудники = Справочники.Сотрудники.Выбрать();

		Пока Сотрудники.Следующий() Цикл
			Если НЕ Сотрудники.ПометкаУдаления ТОгда
				МассивСотрудников.Добавить(Сотрудники.Ссылка);
			КонецЕсли;

		КонецЦикла;
	КонецЕсли;

	Для Каждого Сотрудники Из МассивСотрудников Цикл
		Для Каждого начисление Из Сотрудники.РасчетЗарплаты Цикл

			Если (Не ЗначениеЗаполнено(Начисление.ДатаНачала) ИЛИ Начисление.ДатаНачала <= Объект.Дата)
				И (Не ЗначениеЗаполнено(Начисление.ДатаОкончания) ИЛИ Начисление.ДатаОкончания > Объект.Дата) Тогда

				НоваяСтрокаТаблицыЗаработнойПлаты = Объект.Зарплата.Добавить();
				НоваяСтрокаТаблицыЗаработнойПлаты.Сотрудник = Сотрудники.Ссылка;
				НоваяСтрокаТаблицыЗаработнойПлаты.размер    = Начисление.Размер;
				ПоследнийРасчет = ОбщийМодульСервер.ПолучитьДатуПоследнегоРасчета(НоваяСтрокаТаблицыЗаработнойПлаты.Сотрудник, Объект.Дата);
				НоваяСтрокаТаблицыЗаработнойПлаты.ДатаПоследнегоРасчета      = ПоследнийРасчет.ДатаПоследнегоРасчета;
				НоваяСтрокаТаблицыЗаработнойПлаты.ПрошлыйПериодДатаНачала    = ПоследнийРасчет.ПрошлыйПериодДатаНачала;
				НоваяСтрокаТаблицыЗаработнойПлаты.ПрошлыйПериодДатаОкончания = ПоследнийРасчет.ПрошлыйПериодДатаОкончания;
				НоваяСтрокаТаблицыЗаработнойПлаты.ДатаНачала = ДатаНачала;
				НоваяСтрокаТаблицыЗаработнойПлаты.ДатаОкончания = ДатаОкончания;
				НоваяСтрокаТаблицыЗаработнойПлаты.ВидНачисления = Начисление.ВидНачисления;

				Если Начисление.ВидНачисления = Перечисления.ВидыНачислений.ЗаСмену Тогда
					НоваяСтрокаТаблицыЗаработнойПлаты.Количество = Начисление.Количество;
					Если НЕ ЗначениеЗаполнено(ДатаНачала) Тогда
						НоваяСтрокаТаблицыЗаработнойПлаты.ДатаНачала = НоваяСтрокаТаблицыЗаработнойПлаты.ПрошлыйПериодДатаОкончания + 3600 * 24 + 1;
					КонецЕсли;

					Если НЕ ЗначениеЗаполнено(ДатаОкончания) Тогда
						НоваяСтрокаТаблицыЗаработнойПлаты.ДатаОкончания = НачалоДня(ОбщийМодульСервисСервер.ПользователяТекущаяДата()) - 1;
					КонецЕсли;
				ИначеЕсли Начисление.ВидНачисления = Перечисления.ВидыНачислений.Другое Тогда
					НоваяСтрокаТаблицыЗаработнойПлаты.Количество = 1;
				ИначеЕсли Начисление.ВидНачисления = Перечисления.ВидыНачислений.ПроцентОтСтоимостиВыполненныхРабот Тогда
					// рассчитано для строки
				ИначеЕсли Начисление.ВидНачисления = Перечисления.ВидыНачислений.ПроцентОтПрибыли Тогда

					// рассчитано для строки
				ИначеЕсли Начисление.ВидНачисления = Перечисления.ВидыНачислений.ПроцентОтСуммыРеализации Тогда

					// рассчитано для строки
				ИначеЕсли Начисление.ВидНачисления = Перечисления.ВидыНачислений.ПроцентОтСуммыЛичнойРеализации Тогда

					// рассчитано для строки
				ИначеЕсли Начисление.ВидНачисления = Перечисления.ВидыНачислений.ЗаКомплектацию Тогда

					// рассчитано для строки
				ИначеЕсли Начисление.ВидНачисления = Перечисления.ВидыНачислений.ЗаОказанныеУслугиЗаВремя Тогда

					// рассчитано для строки
				ИначеЕсли Начисление.ВидНачисления = Перечисления.ВидыНачислений.ПроцентОтСуммыОказанныхУслугЗаВремя Тогда

					// рассчитано для строки
				ИначеЕсли Начисление.ВидНачисления = Перечисления.ВидыНачислений.Ставка Тогда

					Если НЕ ЗначениеЗаполнено(ДатаНачала) Тогда
						НоваяСтрокаТаблицыЗаработнойПлаты.ДатаНачала = НоваяСтрокаТаблицыЗаработнойПлаты.ПрошлыйПериодДатаОкончания + 3600 * 24 + 1;
					КонецЕсли;

					Если НЕ ЗначениеЗаполнено(ДатаОкончания) Тогда
						Если День(НоваяСтрокаТаблицыЗаработнойПлаты.ДатаНачала) = 1  Тогда
							НоваяСтрокаТаблицыЗаработнойПлаты.ДатаОкончания = КонецМесяца(НоваяСтрокаТаблицыЗаработнойПлаты.ДатаНачала);
						Иначе
							НоваяСтрокаТаблицыЗаработнойПлаты.ДатаОкончания = НачалоМесяца(ОбщийМодульСервисСервер.ПользователяТекущаяДата()) - 1;
						КонецЕсли;
					КонецЕсли;

					Если Начисление.Количество = 0 Тогда
						НоваяСтрокаТаблицыЗаработнойПлаты.Количество = 1;
					Иначе
						НоваяСтрокаТаблицыЗаработнойПлаты.Количество = Начисление.Количество;
					КонецЕсли;
				КонецЕсли;

				НоваяСтрокаТаблицыЗаработнойПлаты.ВалютаНачисления = Начисление.Валюта;
				НоваяСтрокаТаблицыЗаработнойПлаты.Курс = ОбщийМодульПовтор.ПолучитьТекущийКурс(НоваяСтрокаТаблицыЗаработнойПлаты.ВалютаНачисления, Объект.Дата);
				НоваяСтрокаТаблицыЗаработнойПлаты.Валюта = НоваяСтрокаТаблицыЗаработнойПлаты.ВалютаНачисления;
				РассчитатьСтрокуЗП(НоваяСтрокаТаблицыЗаработнойПлаты);
			КонецЕсли;

		КонецЦикла;

	КонецЦикла;

	// добавим долги
	ДобавитьТолькоЗадолженностьНаСервере();

КонецПроцедуры

