&НаСервере
Процедура ДобавитьЗадолженностьЗаТоварыСотрудника(Знач Сотрудник)

	Если ЗначениеЗаполнено(сотрудник.клиент) Тогда

		Запрос = Новый Запрос;
		Запрос.Текст = "ВЫБРАТЬ РасчетыОстатки.СуммаОстаток Из РегистрНакопления.Расчеты.Остатки(&дата, Клиент = &Клиент) КАК РасчетыОстатки";
		Запрос.УстановитьПараметр("дата", Объект.дата);
		Запрос.УстановитьПараметр("Клиент", сотрудник.клиент);

		РезультатЗапроса = Запрос.Выполнить();

		Если НЕ РезультатЗапроса.Пустой() Тогда
			ВыборкаДетальныеЗаписи = РезультатЗапроса.Выбрать();
			Пока ВыборкаДетальныеЗаписи.Следующий() Цикл
				Если НЕ ВыборкаДетальныеЗаписи.СуммаОстаток = 0 Тогда
					НоваяСтрокаТаблицыЗаработнойПлаты = Объект.Зарплата.Добавить();
					НоваяСтрокаТаблицыЗаработнойПлаты.Сотрудник 	= Сотрудник;
					НоваяСтрокаТаблицыЗаработнойПлаты.размер 		= - ВыборкаДетальныеЗаписи.СуммаОстаток; // за минусом
					НоваяСтрокаТаблицыЗаработнойПлаты.Количество 	= 1;
					НоваяСтрокаТаблицыЗаработнойПлаты.ВидНачисления = Перечисления.ВидыНачислений.Другое;
					НоваяСтрокаТаблицыЗаработнойПлаты.Курс 			= 1;
					НоваяСтрокаТаблицыЗаработнойПлаты.Валюта 		= НоваяСтрокаТаблицыЗаработнойПлаты.ВалютаНачисления;
					НоваяСтрокаТаблицыЗаработнойПлаты.ВалютаНачисления 	= Справочники.Валюты.ОсновнаяВалюта;
					НоваяСтрокаТаблицыЗаработнойПлаты.КлиентПоставщик 	= сотрудник.клиент;
					НоваяСтрокаТаблицыЗаработнойПлаты.Долг 			= ИСТИНА;
					НоваяСтрокаТаблицыЗаработнойПлаты.Комментарий 	= ОбщийМодульПовтор.ПолучитьТекстНаЯзыке("За купленный товар");
					РассчитатьСтрокуЗП(НоваяСтрокаТаблицыЗаработнойПлаты);
				КонецЕсли;

			КонецЦикла;
		КонецЕсли;
	КонецЕсли;

	Если ЗначениеЗаполнено(сотрудник.поставщик) Тогда

		Запрос = Новый Запрос;
		Запрос.Текст = "ВЫБРАТЬ РасчетыСПоставщикамиОстатки.СуммаОстаток КАК СуммаОстаток Из РегистрНакопления.РасчетыСПоставщиками.Остатки(&дата, Поставщик = &поставщик) КАК РасчетыСПоставщикамиОстатки";
		Запрос.УстановитьПараметр("Дата", Объект.Дата);
		Запрос.УстановитьПараметр("Поставщик", Сотрудник.Поставщик);

		РезультатЗапроса = Запрос.Выполнить();

		Если НЕ РезультатЗапроса.Пустой() Тогда
			ВыборкаДетальныеЗаписи = РезультатЗапроса.Выбрать();
			Пока ВыборкаДетальныеЗаписи.Следующий() Цикл
				Если НЕ ВыборкаДетальныеЗаписи.СуммаОстаток = 0 Тогда
					НоваяСтрокаТаблицыЗаработнойПлаты = Объект.Зарплата.Добавить();
					НоваяСтрокаТаблицыЗаработнойПлаты.Сотрудник 		= Сотрудник;
