					Движение.Количество 	= ТекСтрокаТовары.Количество;					
					Движение.Сумма 			= СуммаСписания;
					Движение.Комментарий	= КомментарийСтроки;
					
				КонецЕсли;
			КонецЕсли;		
		КонецЦикла;	
	КонецЕсли;
	
	движения.Товары.Записывать = НЕ Отказ;
	
