// 	Открыта - открыта группа или нет.
// 
Функция ОпределениеОтступаПоУровню(Уровень, НомерКолонки, Открыта)
	Пробел = "";
	Если НомерКолонки = 0 Тогда 
		Если Уровень > 1 Тогда 
			Для Индекс = 1 По Уровень Цикл
				Пробел = Пробел + Символы.Таб; 
			КонецЦикла;
			Открыта = ЛОЖЬ;
		Иначе
			Открыта = ИСТИНА;
		КонецЕсли;	
	КонецЕсли;	
	Возврат Пробел;
КонецФункции	
