&НаКлиенте
Процедура ЗаписатьКурсИЗакрыть(Команда)
	
	Записать();

	Если НЕ ОбщийМодульПовтор.ПолучитьЗначениеНастройкиИлиКонстанты("НеСпрашиватьОПересчетеЦенПриСменеКурсаВалют") Тогда
		Отказ = ОбщийМодульСервисСервер.ПроверитьОтказДоступа("002350");	
		
		Если НЕ ОТказ 
			И КурсИзменился(Запись.Валюта, Запись.Период, Запись.Курс)
			И ЕстьЗависимыеЦены(Запись.Валюта) Тогда
			
			ТекстВопроса = ОбщийМодульПовтор.ПолучитьТекстНаЯзыке("Существуют зависимые цены!") + Символы.ПС + ОбщийМодульПовтор.ПолучитьТекстНаЯзыке("Рассчитать все зависимые цены по новому курсу валют?");
			
			ПоказатьВопрос(Новый ОписаниеОповещения("ПослеЗаписиЗавершение", ЭтотОбъект), ТекстВопроса, РежимДиалогаВопрос.ДаНет, 10, , "1");
			
		КонецЕсли;	
	КонецЕсли;
	
КонецПроцедуры

&НаСервере
Процедура ВыяснитьТекущийКурс(Знач ДляПериода = ЛОЖЬ)
	
	Элементы.На1Валюту.Заголовок = СокрЛП(НаименованиеБазововйВалюты) + " " + ОбщийМодульПовтор.ПолучитьТекстНаЯзыке("на") + " 1 " + запись.Валюта;
	
	Если ЗначениеЗаполнено(Запись.Валюта) Тогда
		Если Запись.Валюта.Предопределенный Тогда
			ТекущийКурс = 1;
			Запись.Курс = 1;
			Элементы.Курс.ТолькоПросмотр = ИСТИНА;
			Элементы.Курс.Доступность = ЛОЖЬ;
			Элементы.ОбратныйПересчет.Доступность = ЛОЖЬ;
		Иначе
			ТекущийКурс = ОбщийМодульПовтор.ПолучитьТекущийКурс(Запись.Валюта, ?(ДляПериода, Запись.Период, Неопределено));
			Элементы.Курс.ТолькоПросмотр = ЛОЖЬ;
			Элементы.Курс.Доступность = ИСТИНА;
			Элементы.ОбратныйПересчет.Доступность = ИСТИНА;
		КонецЕсли;
		
		Элементы.ТекущийКурс.Заголовок = ОбщийМодульПовтор.ПолучитьТекстНаЯзыке("Курс на") + " " + Формат(?(ДляПериода, Запись.Период, ОбщийМодульСервисСервер.ПользователяТекущаяДата()), "ДФ=dd.MM.yyyy") + ОбщийМодульПовтор.ПолучитьТекстНаЯзыке(" от") + " " + Справочники.Валюты.ОсновнаяВалюта.Наименование;	
	КонецЕсли;	
	ОбратныйПересчетКурса();
	
КонецПроцедуры

